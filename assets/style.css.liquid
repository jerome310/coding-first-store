    display: flex;
    align-items: center;
    justify-content: space-evenly;
    font-family: 'Karla', sans-serif;
}
.navbar img {
    width: 180px;
}
.nav-li {
    padding: 0px;
    text-transform: uppercase;
}

.nav-li a {
    padding: 0 15px;
    color: #000052;
    text-decoration: none;
    font-size: 18px;
}

