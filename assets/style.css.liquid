/* Page Letter Style */
@import url('https://fonts.googleapis.com/css2?family=Karla:wght@200;300;400;500;600;700;800&family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap');


/* Store Name */
.shop-name a {
  text-decoration: none;
  font-size: 20px;
  color: #555555;
  text-transform: uppercase;
}

/* Navbar Section */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  font-family: 'Karla', sans-serif;
  font-family: 'Montserrat', sans-serif;
  font-weight: 500;
}
.navbar img {
  width: 180px;
}
.nav-li {
  padding: 0;
  text-transform: uppercase;
}

.nav-li a {
  padding: 0 15px;
  color: #000052;
  text-decoration: none;
  font-size: 16px;
}

.hero-icon {
  padding: 0 5px;
  width: 25px;
}

.hamburger {
    display: none;
}

.nav-icons {
  text-decoration: none;
  color: #555555;
}

@media only screen and (max-width : 500px) {
  /* Navbar Mobile  */
  .hamburger {
    justify-self: center;
    height: 40px;
    display: block;
  }
  .nav-li {
    position: fixed;
    top: 5%;
    left: 0;
    width: 80%;
    height: 100%;
    background: rgba(250, 249, 246);
    display: flex;
    align-items: center;
    line-height: 125px;
    flex-direction: column;
    box-shadow: 0px 10px 8px #000000;
    display: none;
  }
  .nav-li.box-show {
    display: flex;
    flex-direction: column;
  }

}